FROM php:apache

# Install necessary PHP extensions and tools
RUN apt-get update && \
    apt-get install -y libzip-dev zip zlib1g-dev git unzip && \
    docker-php-ext-install mysqli zip


# Copy Certificates
COPY /etc/ssl/certs/server.crt /var/www/html/server.certs
COPY /etc/ssl/private/server.key /var/www/html/server.key

    # Enable SSL module for Apache
RUN a2enmod ssl

# Restart Apache to apply changes
RUN service apache2 restart

# Set working directory
WORKDIR /var/www/html

# Copy application code
COPY ./app-code /var/www/html

